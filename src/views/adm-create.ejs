<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head'); %>
</head>
<body>  
    <%- include('./partials/header'); %>
    <main>

        <!--Formularios-->
            <div class="contenedor-formularios">
                <form action="/" method="GET" class="create-form">
    
                    <div class="titulo_form">
                        <h3>Ingresa el Producto</h3>
                    </div>  
                
                    <div class="control-formulario">
                        <label for="Nombre de Producto">Nombre de Producto</label>
                        <input type="text" name="Nombre de Producto" class="control" placeholder="Ej: parque cerezo">
                    </div>
    
                    <div class="control-formulario">
                        <label for="marca">Marca del Producto</label>
                        <input type="text" name="marca" class="control" placeholder="Ej: Ilva">
                    </div>
                    
                    <div class="control-formulario">
                        <label for="descripcion">Descripcion del Producto</label>
                        <input type="textarea" name="descripcion" class="control" placeholder="Ingrese medidas mÂ²">
                    </div>

                    <div class="control-formulario">
                        <label class="foto"><i class="fas fa-camera"></i>Subir una imagen del Producto:
                        <input type="file" name="avatar" accept=".jpg .png" class="control"></label>   
                    </div>
    
                    <div class="control-formulario">
                        <label class="label-title">Categoria</label>
                        <div class="elecciones">
                            <label><input type="radio" name="perfil" value="Griferia">Griferia</label>
                            <label><input type="radio" name="perfil" value="Sanitarios">Sanitarios</label>
                            <label><input type="radio" name="perfil" value="Pisos">Pisos</label>
                        </div>
                
                    </div>
                    
                    <div class="control-formulario">
                        <label for="pesos">$<input type="number" name="pesos" placeholder="Precio del Producto $" class="control" value="$"></label>   
                    </div>

                    <!-- Agregar campo de Oferta -->

                    <div class="control-formulario">
                        <label for="medidas">Medidas</label>
                        <div class="elecciones">
                            <label><input type="checkbox" name="perfil" value="medidas1">35x60</label>
                            <label><input type="checkbox" name="perfil" value="medidas2">30x45</label>
                            <label><input type="checkbox" name="perfil" value="medidas3">45x90</label>
                            <label><input type="checkbox" name="perfil" value="medidas4">20x120</label>
                        </div>
                        
                    </div>
    
                    <div class="botones">
                        <button type="reset" class="boton-borrado">Borrar</button>
                        <button type="submit" class="boton-registro">Crear</button>
                    </div>
            
                </form>
            </div>
    
    
    </main>
    <%- include('./partials/footer'); %>
</body>
</html>