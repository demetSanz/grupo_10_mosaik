<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head'); %>
</head>
<body>
    <%- include('./partials/header'); %>

    <main class="main-elias">
        
        <!--Main-Banner Slider-->
        
        <div class="main-banner">
          <a href="#">  
            <img class="slide1" src="./images/promo3.jpeg">
          </a>
        </div>

        <!--Seccion Griferias-->



        <h2 class="titular"> <%= categoria[0].category.toUpperCase() %></h2>

        <section class="seccion-mas-visto">
            <% for(let i=0; i < categoria.length; i++){ %>
            <article class="producto-elias">
                <img src='./images/products/<%= categoria[i].image %>' class="img";>
                <div class="producto-descripcion">
                    <i class="fas fa-tags"></i>
                    <p class="precio-elias"><%= categoria[i].price %></p>
                    <p class="medidas"><%= categoria[i].size %></p>
                    <p class="nombre-producto"><%= categoria[i].name %></p>
                </div>
            </article>
           <% } %>
      </article>
        </section>

    </main>

    <%- include('./partials/footer'); %>
</body>
</html>